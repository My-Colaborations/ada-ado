with "config";
with "ado_core";
@WITH_ADO_SQLITE@
@WITH_ADO_MYSQL@

project Ado is
   Version := Ado_Core.Version;
   Library_Dir := Ado_Core.Library_Dir;

   Has_Mysql  : Config.Yes_No := "@ADO_HAVE_MYSQL@";
   Has_Sqlite : Config.Yes_No := "@ADO_HAVE_SQLITE@";

   for Source_Dirs use ("src/drivers");
   for Library_Name use "ada_ado_drivers";
   for Library_Kind use "static";

   for Library_Dir use "lib/ado-drivers/" & Project'Library_Kind;
   for Object_Dir use "obj/ado-drivers/" & Project'Library_Kind;

end Ado;
