with "util";
with "ado_core";
@WITH_ADO_SQLITE@
@WITH_ADO_MYSQL@

project Ado is
   Version := Ado_Core.Version;
   Library_Dir := Ado_Core.Library_Dir;

   Has_Mysql  : Config.Yes_No := "@ADO_HAVE_MYSQL@";
   Has_Sqlite : Config.Yes_No := "@ADO_HAVE_SQLITE@";

   for Source_Dirs use ("INSTALL/share/ada/adainclude/ada-ado-drivers");
   for Library_ALI_Dir use "INSTALL/lib/ada/adalib/ada-ado-drivers/";
   for Library_Name use "ada-ado-drivers";
   for Library_Kind use Ado_Core.Library_Type;
   for Library_Version use "lib" & Project'Library_Name & ".so." & Version;

   for Externally_Built use "true";
end Ado;
