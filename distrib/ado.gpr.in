with "util";
with "util_config";
--  @WITH_ADO_SQLITE@
--  @WITH_ADO_MYSQL@

library project Ado is
   Version := "@ADO_VERSION@";

   type Yes_No is ("yes", "no");

   type Library_Type_Type is ("dynamic", "relocatable", "static");

   Library_Type : Library_Type_Type := external ("ADO_LIBRARY_TYPE", "xLIBRARY_TYPE");

   Has_Mysql  : Yes_No := "@ADO_HAVE_MYSQL@";
   Has_Sqlite : Yes_No := "@ADO_HAVE_SQLITE@";

   for Library_Name use "ada_ado";
   for Library_Dir use Util_Config.Libdir;
   for Library_Kind use Library_Type;

   for Source_Dirs use (Util_Config.Includedir & "/ado");
   for Externally_Built use "true";

   case Library_Type is
      when "dynamic" | "relocatable" =>
         for Source_Dirs use Project'Source_Dirs & (Util_Config.Includedir & "/ado/dynamic");
         for Library_ALI_Dir use Util_Config.Alidir & "/ado/relocatable";

      when "static" =>
         for Source_Dirs use Project'Source_Dirs & (Util_Config.Includedir & "/ado/static");
         for Library_ALI_Dir use Util_Config.Alidir & "/ado";

         case Has_Mysql is
            when "yes" =>
               for Source_Dirs use Project'Source_Dirs & (Util_Config.Includedir & "/ado_mysql");

            when "no" =>
               null;

         end case;

         case Has_Sqlite is
            when "yes" =>
               for Source_Dirs use Project'Source_Dirs & (Util_Config.Includedir & "/ado_sqlite");

            when "no" =>
               null;

         end case;

   end case;

end Ado;
